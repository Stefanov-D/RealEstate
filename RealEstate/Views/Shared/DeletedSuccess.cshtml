@{
    ViewData["Title"] = "Delete Successful";
}

<div class="container mt-5 text-center">

    <!-- Initial success alert -->
    <div id="successAlert" class="alert alert-success alert-dismissible fade show shadow-sm rounded" role="alert">
        <strong>Success!</strong> The listing has been successfully deleted.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <!-- Persistent message after alert disappears -->
    <div id="confirmationMessage" class="d-none mt-3 text-success fw-semibold">
        ✔ Listing deleted successfully
    </div>

    <!-- Back to Listings button -->
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back to Listings</a>
    </div>
</div>